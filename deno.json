{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --watch --allow-env --allow-read --allow-net --allow-write --allow-ffi --allow-sys ./src/main.ts",
    "dev:debug": "deno run --watch --inspect-brk=0.0.0.0:9229 --allow-env --allow-read --allow-net --allow-write --allow-ffi --allow-sys ./src/main.ts",
    "start": "deno run --allow-env --allow-read --allow-net --allow-write --allow-ffi --allow-sys ./src/main.ts",
    "test": "deno test --allow-read --allow-net --allow-env --allow-write",
    "db:generate": "deno run -A npm:drizzle-kit generate"
  },
  "imports": {
    "@brielov/crypto": "jsr:@brielov/crypto@^0.1.0",
    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.7.2",
    "@libsql/client": "npm:@libsql/client@^0.15.14",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/fs": "jsr:@std/fs@^1.0.18",
    "@std/path": "jsr:@std/path@^1.1.2",
    "bullmq": "npm:bullmq@^5.58.4",
    "chokidar": "npm:chokidar@^4.0.3",
    "comic-metadata-tool": "npm:comic-metadata-tool@^1.2.0",
    "drizzle-kit": "npm:drizzle-kit@^0.31.4",
    "drizzle-orm": "npm:drizzle-orm@^0.44.5",
    "hono": "npm:hono@^4.9.5",
    "pino": "npm:pino@^9.9.0",
    "pino-pretty": "npm:pino-pretty@^11.2.2",
    "winston": "npm:winston@^3.17.0",
    "zod": "npm:zod@^4.1.5"
  }
}
